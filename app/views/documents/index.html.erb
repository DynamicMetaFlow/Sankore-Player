<h1>Listing documents</h1>

<table>
  <tr>
    <th>Uuid</th>
    <th>Group</th>
    <th>Name</th>
    <th>Publishing date</th>
    <th>Publishing url</th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%=h document.uuid %></td>
    <td><%=h document.group %></td>
    <td><%=h document.name %></td>
    <td><%=h document.publishing_date %></td>
    <td><%=h document.publishing_url %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New document', new_document_path %>